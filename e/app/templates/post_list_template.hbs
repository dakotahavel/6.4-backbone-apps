<div class="well">
  <h2> {{title}} </h2>
  <div> {{ body }} </div>
</div>
<div>
  <button class="edit-btn btn btn-default"> Edit </button>
  <button class="delete-btn float-right btn btn-danger"> Delete </button>
</div>
<br>
<div>
<form class="edit-form" action="index.html" method="post">
  <div class="form-group">
    <label for="title">New Title</label>
    <input type="text" class="form-control" id="edit-title" value='{{ title }}'>
    <!-- <textarea form="edit-title">{{ title }}</textarea> -->
  </div>
  <div class="form-group">
    <label for="body">New Body</label>
    <input type="text" class="form-control" id="edit-body" value="{{body}}">
  </div>

  <button type="submit" class="update-btn btn btn-default">Update Post</button>

</form>
